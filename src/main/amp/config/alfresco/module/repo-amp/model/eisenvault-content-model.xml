<?xml version="1.0" encoding="UTF-8"?>

<!-- Definition of new Model -->

<!-- The important part here is the name - Note: the use of the ev: namespace 
	which is defined further on in the document -->
<model name="ev:evContentModel" xmlns="http://www.alfresco.org/model/dictionary/1.0">

	<!-- Optional meta-data about the model -->
	<description>Eisenvault Document Model</description>
	<author>Hiten Rastogi</author>
	<version>1.0</version>

	<!-- Imports are required to allow references to definitions in other models -->

	<imports>
		<!-- Import Alfresco Dictionary Definitions -->
		<import uri="http://www.alfresco.org/model/dictionary/1.0"
			prefix="d" />
		<!-- Import Alfresco Content Domain Model Definitions -->
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm" />
	</imports>

	<!-- Introduction of new namespaces defined by this model -->
	<namespaces>
		<namespace uri="http://www.eisenvault.net/model/content/1.0"
			prefix="ev" />
	</namespaces>

	<constraints>
		<!-- Constraint on year -->
		<constraint name="ev:yearConstraint" type="LENGTH">
			<parameter name="minLength">
				<value>0</value>
			</parameter>
			<parameter name="maxLength">
				<value>4</value>
			</parameter>
		</constraint>

		<!-- Constraint on month -->
		<constraint name="ev:monthConstraint" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value></value>
					<value>January</value>
					<value>February</value>
					<value>March</value>
					<value>April</value>
					<value>May</value>
					<value>June</value>
					<value>July</value>
					<value>August</value>
					<value>September</value>
					<value>October</value>
					<value>November</value>
					<value>December</value>
				</list>
			</parameter>
		</constraint>

		<!-- Date Constraint added by Raghav Bhardwaj -->
		<!-- <constraint name="ev:dateConstraint" type="REGEX"> <parameter name="expression"> 
			<value>^(3[01]|[12][0-9]|[0-9])$</value> </parameter> <parameter name="requiresMatch"> 
			<value>true</value> </parameter> </constraint> -->
		<!-- Added by Vipul to allow blank values of date -->
		<constraint name="ev:dateConstraint" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value></value>
					<value>1</value>
					<value>2</value>
					<value>3</value>
					<value>4</value>
					<value>5</value>
					<value>6</value>
					<value>7</value>
					<value>8</value>
					<value>9</value>
					<value>10</value>
					<value>11</value>
					<value>12</value>
					<value>13</value>
					<value>14</value>
					<value>15</value>
					<value>16</value>
					<value>17</value>
					<value>18</value>
					<value>19</value>
					<value>20</value>
					<value>21</value>
					<value>22</value>
					<value>23</value>
					<value>24</value>
					<value>25</value>
					<value>26</value>
					<value>27</value>
					<value>28</value>
					<value>29</value>
					<value>30</value>
					<value>31</value>

				</list>
			</parameter>
		</constraint>
	</constraints>

	<types>

		<!-- Enterprise-wide Eisenvault Document Type -->
		<type name="ev:eisenvaultDoc">
			<title>Eisenvault Document Type</title>
			<parent>cm:content</parent>
			<properties>
				<!-- Year of the Document -->
				<property name="ev:yearOfCreation">
					<title>Document Year</title>
					<type>d:text</type>
					<multiple>false</multiple>
					<constraints>
						<constraint ref="ev:yearConstraint" />
					</constraints>
				</property>
				<!-- Month of the Document -->
				<property name="ev:monthOfCreation">
					<title>Document Month</title>
					<type>d:text</type>
					<multiple>false</multiple>
					<constraints>
						<constraint ref="ev:monthConstraint" />
					</constraints>
				</property>
				<!-- Date of the Document -->
				<property name="ev:dateOfCreation">
					<title>Document Date</title>
					<type>d:text</type>

					<constraints>
						<constraint ref="ev:dateConstraint" />
					</constraints>
				</property>
				<!-- Autogenerated unique number assigned by EisenVault. Can be used 
					to search and find exact documents. -->
				<property name="ev:serialNumber">
					<title>Serial Number</title>
					<type>d:text</type>
					<mandatory>true</mandatory>
				</property>
			</properties>
		</type>
	</types>
</model>